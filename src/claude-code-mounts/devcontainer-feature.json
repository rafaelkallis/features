{
    "name": "Claude Code CLI Mounts",
    "id": "claude-code-mounts",
    "version": "1.0.0",
    "description": "Mounts host Claude configuration directories into the dev container",
    "options": {},
    "installsAfter": [
        "ghcr.io/anthropics/devcontainer-features/claude-code:1"
    ],
    "mounts": [
        {
            "type": "bind",
            "source": "${localEnv:HOME}/.claude.json",
            "target": "/mnt/.claude.json"
        },
        {
            "type": "bind",
            "source": "${localEnv:HOME}/.claude",
            "target": "/mnt/.claude"
        }
    ]
}
